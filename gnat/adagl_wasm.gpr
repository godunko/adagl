with "adagl_config.gpr";
with "../../adawebpack/gnat/adawebpack.gpr";

project AdaGL_WASM is

   for Target use "llvm";

   Source_Dirs := ("../sources");

   case AdaGL_Config.Target_Name is
      when "javascript" =>
         Source_Dirs := Source_Dirs & "../sources/webgl";

      when "llvm" =>
         Source_Dirs := Source_Dirs & "../sources/wasm";

      when others =>
         Source_Dirs := Source_Dirs & "../sources/glew";
   end case;

   for Source_Dirs use Source_Dirs;
   for Object_Dir use AdaGL_Config.Object_Dir;

   package Compiler renames AdaGL_Config.Compiler;

   package Naming is
      case AdaGL_Config.Target_Name is
         when "javascript" =>
            for Specification ("OpenGL") use "opengl__webgl.ads";

         when "llvm" =>
            for Specification ("OpenGL") use "opengl__wasm.ads";

         when others =>
            for Specification ("OpenGL") use "opengl__native.ads";
      end case;
   end Naming;

   package Linker is
      case AdaGL_Config.Target_Name is
         when "javascript" =>

         when "llvm" =>

         when others =>
            for Linker_Options use ("-lGLEW", "-lglfw", "-lGL");
      end case;
   end Linker;

end AdaGL_WASM;
